{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@prisma/client": ["./prisma/app/generated/prisma/client"]
    }
  },
  "include": ["src/**/*", "prisma/**/*.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
